generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique

  token     String   @unique @default(cuid())

  chats     Chat[]
  chatModels ChatModel[]

  plan      Plan    @default(FREE)
}

enum Plan {
  FREE
  STARTER
  PLUS
  ENTERPRISE
}

model ChatModel {
  id        String   @id @default(cuid())

  name      String
  system    String

  icon      String

  owner     User    @relation(fields: [ownerId], references: [id])
  ownerId   String

  chats     Chat[]
  messages  Message[]
}

model Chat {
  id        String   @id @default(cuid())
  name     String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user     User    @relation(fields: [userId], references: [id])
  userId    String

  messages  Message[]
  models    ChatModel[]
}

model Message {
  id        String   @id @default(cuid())
  text      String

  createdAt DateTime @default(now())

  chat      Chat   @relation(fields: [chatId], references: [id])
  chatId    String

  sentBy  ChatModel?   @relation(fields: [sentById], references: [id])
  sentById String?
}